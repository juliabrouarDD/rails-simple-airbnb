<div class="container">
  <h1>Update <%= @flat.name %></h1>
  <form>
    <%= simple_form_for @flat do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "update this flat", class: "btn btn-primary" %>
    <% end %>
  </form>
</div>
